def add(n1, n2):
  return n1 + n2  #this function returns the sum of two numbers
def subtract(n1, n2):
  return n1 - n2 #this function returns the difference of two numbers
def multiply(n1, n2):
  return n1 * n2 #this function returns the product of two numbers
def divide(n1, n2):
  return n1 / n2 #this function returns the quotient of two numbers
#main
chose = input("The operations available are: \n1. Addition \n2. Subtraction \n3. Multiplication \n4. Division. \nPick the operation number (1, 2, 3, or 4):") #this line takes the user's choice of operation
num1 = input("Enter the first number:") #this line takes the user's first number
num2 = input("Enter the second number:" ) #this line takes the user's second number
if chose == 1:
  print num1, "+" , num2, "=", add(num1, num2) #this statement prints the sum of the two numbers by calling on the function add(n1, n2)
elif chose == 2:
  print num1, "-", num2, "=", subtract(num1, num2) #this statement prints the difference of the two numbers by calling on the function subtract(n1, n2)
elif chose == 3:
  print num1, "*", num2, "=", multiply(num1, num2) #this statement prints the product of the two numbers by calling on the function multiply(n1, n2)
elif chose == 4:
  print num1, "/", num2, "=", divide(num1, num2) #this statement prints the quotient of the two numbers by calling on the function divide(n1, n2)
else:
  print "Error, invalid input" #this statement tells the user that their operation choice is invalid (not 1-4)
